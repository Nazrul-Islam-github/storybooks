<h1>Stories</h1>
<div class="row">
    {{#each AllStories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- todo:edit icon --}}


                {{!-- parse html in handlebars to use {{{body}}} this --}}
            </div>

          

            <div class="card-content center-align">

                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                {{!-- 150 is truncate after 150 character --}}
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/">{{user.displayName}}</a>
                </div>
            </div>

            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn gray">Read more</a>
            </div>
        </div>
    </div>

    {{else}}
    <p>No Stories to display</p>
    {{/each}}
</div>